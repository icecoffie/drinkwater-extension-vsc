{
  "name": "drinkwater-extension",
  "displayName": "Drink Water Pop-Up ðŸ’§",
  "description": "remind you to drink water for 20 minutes every coding",
  "version": "0.0.6",
  "publisher": "MatrixSync",
  "icon": "media/drinkwater.png",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:drinkwater-reminder.start"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "drinkwater-reminder.start",
        "title": "Drink Water by Matrix Sync"
      }
    ],
    "keybindings": [
      {
        "command": "drinkwater-reminder.start",
        "key": "ctrl+shift+h",
        "when": "editorTextFocus"
      },
      {
        "command": "drinkwater-reminder.start",
        "mac": "cmd+shift+h",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "eslint": "^9.25.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
